<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/im"
        android:scaleType="centerCrop"
        android:contentDescription="background"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="495dp"
        android:background="@drawable/semi_transparent_blue"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Хотите войти как "
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#3C599E"
            android:text="как учащийся"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="16dp"
            />

        <Button
            android:id="@+id/button_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#3C599E"
            android:padding="16dp"
            android:text="как преподаватель"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/button_admin"
            android:layout_width="66dp"
            android:layout_height="63dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/baseline_admin_panel_settings_24"
            android:padding="16dp"
            android:text="как преподаватель"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
